<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="32dp"/>
            <size
                android:width="96dp"
                android:height="48dp"/>

            <solid android:color="#20000000"/>
        </shape>

    </item>

    <!-- base -->
    <item
        android:bottom="4dp"
        android:left="4dp"
        android:right="4dp"
        android:top="4dp">
        <shape android:shape="rectangle">
            <corners android:radius="32dp"/>
            <size
                android:width="96dp"
                android:height="48dp"/>
            <solid android:color="#1C8796"/>
        </shape>

    </item>


    <!-- Ring -->
    <item
        android:bottom="7dp"
        android:left="7dp"
        android:right="7dp"
        android:top="7dp">
        <shape android:shape="rectangle">
            <corners android:radius="32dp"/>
            <size
                android:width="96dp"
                android:height="48dp"/>
            <gradient
                android:angle="0"
                android:endColor="@color/p_green"
                android:startColor="@color/p_red"/>
        </shape>
    </item>

    <!-- Inner -->
    <item
        android:bottom="9dp"
        android:left="9dp"
        android:right="9dp"
        android:top="9dp">
        <shape android:shape="rectangle">
            <corners android:radius="32dp"/>
            <size
                android:width="96dp"
                android:height="48dp"/>
            <solid android:color="#1C8796"/>
        </shape>
    </item>
</layer-list>